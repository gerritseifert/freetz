CAPTION='Netatalk: $(lang de:"Dateiendungen" en:"File extension map")'
DESCRIPTION='<a href="http://netatalk.sourceforge.net/3.1/htmldocs/extmap.conf.5.html" target="_blank">$(lang de:"Syntax siehe Dokumentation von extmap.conf" en:"Syntax see documentation of extmap.conf")</a><br>'

if [ ! -e "/tmp/flash/netatalk/extmap_conf" ]
then
        cat /mod/etc/default.netatalk/extmap_conf_template.txt > /tmp/flash/netatalk/extmap_conf
fi

CONFIG_FILE='/tmp/flash/netatalk/extmap_conf'
CONFIG_SAVE='modsave flash; if pidof netatalk > /dev/null; then echo ""; /mod/etc/init.d/rc.netatalk restart; fi'
CONFIG_TYPE='text'

TEXT_ROWS=15
